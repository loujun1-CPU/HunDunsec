version: '3'
services:
  pikachu:
    image: area39/pikachu:latest
    container_name: pikachu
    ports:
      - "8001:80"
    environment:
      - MYSQL_ROOT_PASSWORD=root
      - MYSQL_DATABASE=pikachu
      - MYSQL_USER=admin
      - MYSQL_PASSWORD=password
    volumes:
      - pikachu_data:/var/www/html
    restart: unless-stopped
    networks:
      - pikachu-network
volumes:
  pikachu_data:
networks:
  pikachu-network:
    driver: bridge
